{
  "languageserver": {
    "ocaml": {
      "command": "opam",
      "args": ["exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "codeLens.enable": true,
  "workspace.workspaceFolderCheckCwd": false
}
